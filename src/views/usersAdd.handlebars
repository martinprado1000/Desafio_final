<form
  name="userProducts"
  id="userProducts"
  class="row needs-validation mt-2 mx-2"
  enctype="multipart/form-data"
  novalidate
>
  <div class="col-6">
    <input type="hidden" id="id" name="id" />
    <div class="col-md">
      <label for="name" class="form-label">Nombre</label>
      <input
        type="text"
        name="name"
        class="form-control"
        id="name"
        placeholder="Ingrese un nombre"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md">
      <label for="lastname" class="form-label mt-3">Apellido</label>
      <input
        name="lastname"
        type="text"
        class="form-control"
        id="lastname"
        placeholder="Ingrese una apellido"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md">
      <label for="email" class="form-label mt-3">Email</label>
      <input
        name="email"
        type="email"
        class="form-control"
        id="email"
        placeholder="Ingrese un email"
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md">
      <label for="age" class="form-label mt-3">Edad</label>
      <input
        name="age"
        type="number"
        class="form-control"
        id="age"
        placeholder="Ingrese la edad"
        required
      />
      <div class="invalid-feedback">
        Please provide a valid city.
      </div>
    </div>
    <div class="col-md">
      <label for="rol" class="form-label mt-3">Rol</label>
      <select
        name="rol"
        type="text"
        class="form-control"
        id="rol"
        placeholder="Seleccione un rol"
        required
      >
        <option value="" disabled selected>Selecciona una categoria</option>
        <option value="admin">Admin</option>
        <option value="premium">Premium</option>
        <option value="user">User</option>
      </select>
      <div class="invalid-feedback">
        Please provide a valid city.
      </div>
    </div>
    {{!-- <div class="col-md">
      <label for="stock" class="form-label mt-3">Stock</label>
      <input
        name="stock"
        type="number"
        class="form-control"
        id="stock"
        placeholder="Ingrese stock"
        value="{{data.stock}}"
        required
      />
      <div class="invalid-feedback">
        Please provide a valid zip.
      </div>
    </div> --}}
  </div>
  <div class="col-6">
    <label for="password" class="form-label">Contraseña</label>
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
      placeholder="Ingrese una contraseña"
      {{! required }}
    />
    <div class="invalid-feedback">
      Ingrese una contraseña!
    </div>

    <label for="passwordRepit" class="form-label mt-3">Repita la contraseña</label>
    <input
      type="password"
      class="form-control"
      id="passwordRepit"
      name="passwordRepit"
      placeholder="Repita la contraseña"
      {{! required }}
    />
    <div class="invalid-feedback">
      Repita la contraseña!
    </div>

    <button
      class="btn btn-success mt-4"
      type="submit"
      name="submit"
      id="submit"
    >Guardar usuario</button>
    <a href="/users" class="btn btn-danger mt-4">Cancelar</a>
  </div>
</form>

